<odoo>
  <data>

      <!--FORM-->
      <record model="ir.ui.view" id="res_partner_attachment_files">
          <field name="name">res.partner.files</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="base.view_partner_form"/>
          <field name="arch" type="xml">

              <!--Audiometrias-->
              <div name="button_box"  position="inside">
                  <button class="oe_stat_button" name="attachment_tree_view" type="object" icon="fa-files-o">
                        <field string="Documents" name="doc_count" widget="statinfo"/>
                    </button>
              </div>

              <!--RGPD Firma-->
              <group position="after">
                  <group>
                    <group>
                        <field name="rgpd_signature" widget="signature"/>
                    </group>
                  </group>
              </group>
          </field>
      </record>

      <!--KANBAN-->
      <record model="ir.ui.view" id="res_partner_kanban_rgpd">
          <field name="name">res.partner.rgpd</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="base.res_partner_kanban_view"/>
          <field name="arch" type="xml">

              <!--RGPD-->
              <field name="type" position="after">
                  <field name="rgpd_signature" invisible="1"/>
              </field>
              <xpath expr="//div[hasclass('oe_kanban_partner_links')]" position="inside">
                  <span t-if="record.rgpd_signature.value" class="badge"><i class="fa fa-fw fa-thumbs-up"/></span>
              </xpath>

          </field>
      </record>

      <!--SEARCH FILTERS-->
      <record model="ir.ui.view" id="res_partner_search_filters">
          <field name="name">res.partner.filters</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="base.view_res_partner_filter"/>
          <field name="arch" type="xml">

              <!--RGPD-->
              <separator position="after">
                  <filter name="filter_rgpd_partners" help="RGPD Firmada" domain="[('rgpd_signature','!=',False)]"/>
                  <filter name="filter_NO_rgpd_partners" help="RGPD NO Firmada" domain="[('rgpd_signature','=',False)]"/>
                  <separator/>
              </separator>

          </field>
      </record>




  </data>
</odoo>


<odoo>

    <!-- Main template -->
    <template id="report_saleorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="ta_personalizations.report_rgpd" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <!-- Translatable template -->
    <template id="report_rgpd">
        <!-- Re-browse of the record with the partner lang -->
        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
        <t t-call="web.external_layout">
            <div class="page">
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-xs-6">
                        asdfsdfsdfsdfsdfsdfsdfds
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <report
        id="rgpd_signed"
        model="res.partner"
        string="RGPD"
        report_type="qweb-pdf"
        name="RGPD"
        file="rgpd_invoice"
        attachment_use="True"
        attachment="('INV'+(object.name or '').replace('/','')+'rgpd_firmado.pdf')"
    />
</odoo>